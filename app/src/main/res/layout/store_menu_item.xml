<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginLeft="3dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/textMenuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴이름표시됩니당"
                android:bufferType="spannable"
                android:theme="@style/contenttmL"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/textMenuPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴가격 표시됩니당"
                android:bufferType="spannable"
                android:theme="@style/contenttm"
                android:textSize="13sp"/>
        </LinearLayout>

        <com.example.pojangapp.pay.ElegantNumberButton
            android:id="@+id/number_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:initialNumber="1"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">
            <ImageButton
                android:id="@+id/buttonCartAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plus"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>